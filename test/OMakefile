.PHONY: check clean

USE_OCAMLFIND = true

OCAMLPACKS[] =
    oUnit

OCAMLINCLUDES += ../lib

NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAMLFLAGS    +=
OCAMLCFLAGS   +=
OCAMLOPTFLAGS +=
OCAML_LINK_FLAGS +=
OCAML_BYTE_LINK_FLAGS +=
OCAML_NATIVE_LINK_FLAGS +=

FILES[] =
    test

PROGRAM = test
OCAML_LIBS += ../lib/promise
OCAML_CLIBS +=
OCAML_OTHER_LIBS +=
OCAML_LIB_FLAGS +=

.DEFAULT: $(OCamlProgram $(PROGRAM), $(FILES))

.DEFAULT: check

check: $(PROGRAM)
    ./$<

clean:
    rm -f \
        $(filter-proper-targets $(glob $(addsuffix .*, $(PROGRAM) $(FILES)))) \
        $(PROGRAM) oUnit-suite*.log oUnit-suite.cache
